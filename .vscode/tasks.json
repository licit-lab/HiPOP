{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ générer le fichier actif",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ générer tous mes fichiers",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-I/opt/anaconda3/envs/MyMnMS/include",
                "-I/usr/local/opt/libomp/include",
                "-L/usr/local/opt/libomp/lib",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/cpp/src/main.cpp",
                "${workspaceFolder}/cpp/src/shortest_path.cpp",
                "${workspaceFolder}/cpp/src/graph.cpp",
                "${workspaceFolder}/cpp/src/create.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-v",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compilateur : /usr/bin/clang++"
        }
    ],
    "version": "2.0.0"
}